<?xml version="1.0" encoding="UTF-8"?>
<project name="module_crawler" default="compile.module.crawler">
  <dirname property="module.crawler.basedir" file="${ant.file.module_crawler}"/>
  
  <property name="module.jdk.home.crawler" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.crawler" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.crawler" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.crawler" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="crawler.output.dir" value="${module.crawler.basedir}/out/production/Crawler"/>
  <property name="crawler.testoutput.dir" value="${module.crawler.basedir}/out/test/Crawler"/>
  
  <path id="crawler.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="crawler.module.production.classpath">
    <path refid="${module.jdk.classpath.crawler}"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <path refid="library.jsch-0.1.53.classpath"/>
    <path refid="library.json.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
    <path refid="library.org.eclipse.jgit-4.0.1.201506240215-r.classpath"/>
    <path refid="library.slf4j-api-1.7.12.classpath"/>
    <path refid="library.slf4j-simple-1.7.12.classpath"/>
  </path>
  
  <path id="crawler.runtime.production.module.classpath">
    <pathelement location="${crawler.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <path refid="library.jsch-0.1.53.classpath"/>
    <path refid="library.json.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
    <path refid="library.org.eclipse.jgit-4.0.1.201506240215-r.classpath"/>
    <path refid="library.slf4j-api-1.7.12.classpath"/>
    <path refid="library.slf4j-simple-1.7.12.classpath"/>
  </path>
  
  <path id="crawler.module.classpath">
    <path refid="${module.jdk.classpath.crawler}"/>
    <pathelement location="${crawler.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <path refid="library.jsch-0.1.53.classpath"/>
    <path refid="library.json.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
    <path refid="library.org.eclipse.jgit-4.0.1.201506240215-r.classpath"/>
    <path refid="library.slf4j-api-1.7.12.classpath"/>
    <path refid="library.slf4j-simple-1.7.12.classpath"/>
  </path>
  
  <path id="crawler.runtime.module.classpath">
    <pathelement location="${crawler.testoutput.dir}"/>
    <pathelement location="${crawler.output.dir}"/>
    <pathelement location="${idea.home}/lib/hamcrest-library-1.3.jar"/>
    <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
    <path refid="library.jsch-0.1.53.classpath"/>
    <path refid="library.json.classpath"/>
    <path refid="library.junit-4.11.classpath"/>
    <path refid="library.org.eclipse.jgit-4.0.1.201506240215-r.classpath"/>
    <path refid="library.slf4j-api-1.7.12.classpath"/>
    <path refid="library.slf4j-simple-1.7.12.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.crawler">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.crawler">
    <patternset refid="excluded.from.module.crawler"/>
  </patternset>
  
  <path id="crawler.module.sourcepath">
    <dirset dir="${module.crawler.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.crawler" depends="compile.module.crawler.production,compile.module.crawler.tests" description="Compile module Crawler"/>
  
  <target name="compile.module.crawler.production" depends="register.custom.compilers" description="Compile module Crawler; production classes">
    <mkdir dir="${crawler.output.dir}"/>
    <javac2 destdir="${crawler.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crawler}/javac">
      <compilerarg line="${compiler.args.crawler}"/>
      <bootclasspath refid="crawler.module.bootclasspath"/>
      <classpath refid="crawler.module.production.classpath"/>
      <src refid="crawler.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.crawler"/>
    </javac2>
    
    <copy todir="${crawler.output.dir}">
      <fileset dir="${module.crawler.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.crawler.tests" depends="register.custom.compilers,compile.module.crawler.production" description="compile module Crawler; test classes" unless="skip.tests"/>
  
  <target name="clean.module.crawler" description="cleanup module">
    <delete dir="${crawler.output.dir}"/>
    <delete dir="${crawler.testoutput.dir}"/>
  </target>
</project>